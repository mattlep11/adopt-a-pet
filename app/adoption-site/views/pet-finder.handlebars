{{!< main}} 
<main id="content-wrapper">
  <img id="form-img" src="/assets/form_undraw.svg"
    alt="Two papers on top of each other.">
  <h2>Please fill out the following to help you find a new best friend!</h2>
  <form id="pet-form" action="/browse-filtered" method="get">
    <fieldset id="animal" class="guideline">
      <legend class="question-header">Animal of choice:
        <span class="error-tooltip">Select one</span>
      </legend>
      <label for="cat">
        Cat <input type="radio" name="animal" value="Cat" id="cat">
      </label>
      <label for="dog">
        Dog <input type="radio" name="animal" value="Dog" id="dog">
      </label>
    </fieldset>
    <hr>
    <fieldset id="breed">
      <label for="breed-selector" class="question-header">
        Their breed:
        <select name="breed" id="breed-selector">
          <option value="">Select a breed</option>
          <optgroup id="Cat" label="Cats">
            <option value="Tabby">Tabby</option>
            <option value="Shorthair">Shorthair</option>
            <option value="Longhair">Longhair</option>
            <option value="Siamese">Siamese</option>
          </optgroup>
          <optgroup id="Dog" label="Dogs">
            <option value="Retriever">Retriever</option>
            <option value="Terrier">Terrier</option>
            <option value="Spaniel">Spaniel</option>
            <option value="Hound">Hound</option>
          </optgroup>
          <option value="Mixed">Mixed</option>
          <option value="None">No Preference / Not Listed</option>
        </select>
        <span class="error-tooltip">Make a selection</span>
      </label>
    </fieldset>
    <hr>
    <fieldset id="age">
      <label for="age-selector" class="question-header">
        Preferred age:
        <select name="age" id="age-selector">
          <option value="">Select an age</option>
          <option value="<=1">1 or younger</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8+">8+</option>
          <option value="None">No preference</option>
        </select>
        <span class="error-tooltip">Make a selection</span>
      </label>
    </fieldset>
    <hr>
    <fieldset id="gender" class="guideline">
      <legend class="question-header">Preferred gender:
        <span class="error-tooltip">Select one</span>
      </legend>
      <label for="male">
        Male <input type="radio" name="gender" value="Male" id="male">
      </label>
      <label for="female">
        Female <input type="radio" name="gender" value="Female" id="female">
      </label>
      <label for="no-pref-gender">
        No preference <input type="radio" name="gender" value="None"
          id="no-pref-gender">
      </label>
    </fieldset>
    <hr>
    <fieldset id="behaviour" class="guideline">
      <legend class="question-header">Your new pet needs to get along with...
        <span class="error-tooltip">Select at least one</span>
      </legend>
      <label for="dogs">
        Other Dogs
        <input type="checkbox" name="behaviour" value="Dogs" id="dogs">
      </label>
      <label for="cats">
        Other Cats
        <input type="checkbox" name="behaviour" value="Cats" id="cats">
      </label>
      <label for="kids">
        Children
        <input type="checkbox" name="behaviour" value="Children" id="kids">
      </label>
      <label for="no-pref">
        No Restrictions
        <input type="checkbox" name="behaviour" value="None"
          class="none-chosen" id="no-pref">
      </label>
    </fieldset>
    <hr>
    <div id="form-controls">
      <input type="submit" value="Submit Form">
      <input type="reset" value="Clear Form">
      <span id="error-detected">
        <i class="fa-solid fa-circle-exclamation"></i> Some input is invalid!
      </span>
    </div>
  </form>
  </main>